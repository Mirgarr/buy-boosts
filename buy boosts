-- Allows you to buy the mining simulator boosts.



_G.Buyx1LuckyBoost = true -- Replace "false" to true if you wanna buy 1 lucky boost
_G.Buyx2LuckyBoosts = true -- Replace "false" to true if you wanna buy 2 lucky boosts
_G.BuyEventSuperLuckyBoost = true -- Replace "false" to true if you wanna buy the event 20 mins super lucky boosts
_G.Buyx1SuperLuckyBoost = true -- Replace "false" to true if you wanna buy 1 super lucky boost
_G.Buyx2SuperLuckyBoosts = true -- Replace "false" to true if you wanna buy 2 super lucky boosts
_G.BuyEventOmegaLuckyBoost = true -- Replace "false" to true if you wanna buy the event 10 mins omega lucky boosts
_G.Buy1xOmegaLuckyBoost = true -- Replace "false" to true if you wanna buy 1 omega lucky boost
_G.Buy2xOmegaLuckyBoosts = true -- Replace "false" to true if you wanna buy 2 omega lucky boosts
_G.Buy1xBigEarnBoost = true -- Replace "false" to true if you wanna buy 1 big earn boost
_G.Buy2xBigEarnBoosts = true -- Replace "false" to true if you wanna buy 2 big earn boost
_G.Buy1xSuperRichBoost = true -- Replace "false" to true if you wanna buy 1 rich boost
_G.Buy2xSuperRichBoosts = true -- Replace "false" to true if you wanna buy 2 rich boosts





-- To buy 1x Lucky Boost.




spawn(function()
    while wait() do 
        if not _G.Buyx1LuckyBoost then break end;
local args = {[1] = "Lucky",[2] = 1}
game:GetService("ReplicatedStorage").Events.BuyBoost:FireServer(unpack(args))
    end
    end)




    -- To buy 2x Lucky Boost.




spawn(function()
    while wait() do 
        if not _G.Buyx2LuckyBoosts then break end;
local args = {[1] = "Lucky",[2] = 2}
game:GetService("ReplicatedStorage").Events.BuyBoost:FireServer(unpack(args))
    end
    end)




-- To buy the event Super Lucky boost.




spawn(function()
    while wait() do 
        if not _G.BuyEventSuperLuckyBoost then break end;
local args = {[1] = "boost1"}
game:GetService("ReplicatedStorage").Events.BuyEventShopItem:FireServer(unpack(args))

    end
    end)




    -- To buy 1 super lucky boost




    spawn(function()
        while wait() do 
            if not _G.Buyx1SuperLuckyBoost then break end;
local args = {[1] = "Super Lucky",[2] = 1}
game:GetService("ReplicatedStorage").Events.BuyBoost:FireServer(unpack(args))
end
end)




-- To buy 2 super Lucky boosts




spawn(function()
    while wait() do 
        if not _G.Buyx2SuperLuckyBoosts then break end;
local args = {[1] = "Super Lucky",[2] = 2}
game:GetService("ReplicatedStorage").Events.BuyBoost:FireServer(unpack(args))
end
end)




    -- To buy the 10 mins event Omega Lucky boost




    spawn(function()
        while wait() do 
            if not _G.BuyEventOmegaLuckyBoost then break end;
local args = {[1] = "boost2"}
game:GetService("ReplicatedStorage").Events.BuyEventShopItem:FireServer(unpack(args))
        end
        end)



-- To buy 1 omega lucky boost on shop




        spawn(function()
            while wait() do 
                if not _G.Buy1xOmegaLuckyBoost then break end;
local args = {[1] = "Omega Lucky",[2] = 1}
game:GetService("ReplicatedStorage").Events.BuyBoost:FireServer(unpack(args))

            end
            end)




-- To buy 2 omega lucky boosts on shop




            spawn(function()
                while wait() do 
                    if not _G.Buy2xOmegaLuckyBoosts then break end;
local args = {[1] = "Omega Lucky",[2] = 2}
game:GetService("ReplicatedStorage").Events.BuyBoost:FireServer(unpack(args))
end
end)



-- To buy 1 big earn boost




spawn(function()
    while wait() do 
        if not _G.Buy1xBigEarnBoost then break end;
        local args = {[1] = "Big Earner",[2] = 1}
        game:GetService("ReplicatedStorage").Events.BuyBoost:FireServer(unpack(args))
end
end)



-- To buy 2 big earn boosts




spawn(function()
    while wait() do 
        if not _G.Buy2xBigEarnBoosts then break end;
local args = {[1] = "Big Earner",[2] = 2}
game:GetService("ReplicatedStorage").Events.BuyBoost:FireServer(unpack(args))
end
end)





-- To buy 1 super richs boost




spawn(function()
    while wait() do 
        if not _G.Buy1xSuperRichBoost then break end;
local args = {[1] = "Super Rich",[2] = 1}
game:GetService("ReplicatedStorage").Events.BuyBoost:FireServer(unpack(args))
end
end)





-- To buy 2 super richs boosts





spawn(function()
    while wait() do 
        if not _G.Buy2xSuperRichBoosts then break end;
local args = {[1] = "Super Rich",[2] = 2}
game:GetService("ReplicatedStorage").Events.BuyBoost:FireServer(unpack(args))
end
end)
